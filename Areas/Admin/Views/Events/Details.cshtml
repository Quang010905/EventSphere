@model EventSphere.Models.entities.TblEvent
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Chi tiết sự kiện</h2>

<div class="card shadow mb-4">
    <div class="card-body">
        <p><b>Tiêu đề:</b> @Model.Title</p>

        <p>
            <b>Ngày & giờ:</b>
            @if (Model.Date != null && Model.Time != null)
            {
                @Model.Date.Value.ToString("dd/MM/yyyy") @Model.Time.Value.ToString(@"hh\:mm")
            }
            else if (Model.Date != null)
            {
                @Model.Date.Value.ToString("dd/MM/yyyy")
            }
            else
            {
                <span>Chưa có thông tin</span>
            }
        </p>

        <p><b>Địa điểm:</b> @Model.Venue</p>
        <p><b>Thể loại:</b> @Model.Category</p>
        <p><b>Người tổ chức:</b> @Model.Organizer?.Email"</p>
        <p><b>Mô tả:</b> @Model.Description</p>

        <p>
            <b>Trạng thái:</b>
            @switch (Model.Status)
            {
                case 1:
                    <span class="badge bg-success">Đã duyệt</span>
                    ;
                    break;
                case 2:
                    <span class="badge bg-danger">Đã vô hiệu</span>
                    ;
                    break;
                default:
                    <span class="badge bg-warning">Chưa duyệt</span>
                    ;
                    break;
            }
        </p>

        <p>
            <b>Ảnh sự kiện:</b><br />
            @if (!string.IsNullOrEmpty(Model.Image))
            {
                <img src="~/uploads/@Model.Image" alt="Event Image" width="300" />
            }
            else
            {
                <span>Chưa có ảnh</span>
            }
        </p>
    </div>
</div>

<a href="@Url.Action("Index", "Events", new { area = "Admin" })" class="btn btn-secondary">⬅ Quay lại</a>
