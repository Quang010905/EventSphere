@model IEnumerable<EventSphere.Models.entities.TblEvent>
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section headerContent {
    <h1 class="h3 mb-0 text-gray-800">Quản lý sự kiện</h1>
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách sự kiện</h6>

        <div class="d-flex align-items-center gap-2">
            <!-- Dropdown lọc trạng thái -->
            <div class="mr-3">
                <label class="mr-2">Trạng thái:</label>
                <select id="statusFilter" class="custom-select custom-select-sm" style="width:auto; display:inline-block;">
                    <option value="">Tất cả</option>
                    <option value="Đã duyệt">Đã duyệt</option>
                    <option value="Chưa duyệt">Chưa duyệt</option>
                    <option value="Đã vô hiệu">Đã vô hiệu</option>
                </select>
            </div>

            <!-- Nút thêm sự kiện -->
            <a href="@Url.Action("Create", "Events", new { area = "Admin" })"
               class="btn btn-sm btn-primary">
                <i class="fas fa-plus"></i> Thêm sự kiện
            </a>
        </div>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead class="thead-dark">
                    <tr>
                        <th>Tiêu đề</th>
                        <th>Ngày & Giờ</th>
                        <th>Địa điểm</th>
                        <th>Trạng thái</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="row-@item.Id">
                            <td>@item.Title</td>
                            <td>
                                @if (item.Date.HasValue && item.Time.HasValue)
                                {
                                    <div>@item.Date.Value.ToString("dd/MM/yyyy")</div>
                                    <div>@item.Time.Value.ToString(@"HH\:mm")</div>
                                }
                                else if (item.Date.HasValue)
                                {
                                    <div>@item.Date.Value.ToString("dd/MM/yyyy")</div>
                                }
                                else
                                {
                                    <span>Chưa có ngày</span>
                                }
                            </td>
                            <td>@item.Venue</td>
                            <td>
                                @if (item.Status == 1)
                                {
                                    <span class="badge bg-success">Đã duyệt</span>
                                }
                                else if (item.Status == 0 || item.Status == null)
                                {
                                    <span class="badge bg-warning">Chưa duyệt</span>
                                }
                                else if (item.Status == 2)
                                {
                                    <span class="badge bg-danger">Đã vô hiệu</span>
                                }
                            </td>
                            <td>
                                @if (item.Status != 2)
                                {
                                    <button class="btn btn-sm btn-danger disable-btn" data-id="@item.Id">
                                        <i class="fas fa-ban"></i> Vô hiệu
                                    </button>
                                }

                                @if (item.Status == 0 || item.Status == null)
                                {
                                    <button class="btn btn-sm btn-success approve-btn" data-id="@item.Id">
                                        <i class="fas fa-check"></i> Duyệt
                                    </button>
                                }

                                @if (item.Status == 1)
                                {
                                    <a asp-controller="Registrations" asp-action="Index" asp-route-eventId="@item.Id" class="btn btn-sm btn-secondary">
                                        <i class="fas fa-users"></i> Đăng ký
                                    </a>
                                    <a asp-controller="Attendances" asp-action="Index" asp-route-eventId="@item.Id" class="btn btn-sm btn-dark">
                                        <i class="fas fa-clipboard-check"></i> Điểm danh
                                    </a>
                                }

                                <a href="@Url.Action("Details", "Events", new { area = "Admin", id = item.Id })"
                                   class="btn btn-sm btn-info" title="Xem chi tiết">
                                    <i class="fas fa-eye"></i>
                                </a>

                                @if (item.Status == 0 || item.Status == null)
                                {
                                    <a href="@Url.Action("Edit", "Events", new { area = "Admin", id = item.Id })"
                                       class="btn btn-sm btn-warning" title="Sửa sự kiện">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                }

                                <a href="@Url.Action("Index", "MediaGallery", new { area = "Admin", eventId = item.Id })"
                                   class="btn btn-sm btn-primary" title="Xem ảnh/video">
                                    <i class="fas fa-photo-video"></i> Thư viện
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(function () {
            if ($.fn.DataTable.isDataTable('#dataTable')) {
                $('#dataTable').DataTable().destroy();
            }

            var table = $('#dataTable').DataTable({
                "language": {
                    "search": "🔍 Tìm kiếm:",
                    "lengthMenu": "Số sự kiện hiển thị: _MENU_",
                    "info": "Hiển thị _START_ đến _END_ của sự kiện",
                    "infoEmpty": "Không có dữ liệu",
                    "zeroRecords": "Không tìm thấy kết quả",
                    "paginate": {
                        "first": "Đầu",
                        "last": "Cuối",
                        "next": "Sau",
                        "previous": "Trước"
                    }
                },
                "pageLength": 10,
                "lengthMenu": [[1, 10, 25, 50, -1], [1, 10, 25, 50, "Tất cả"]],
                "ordering": true,
                "autoWidth": false
            });

            // Tìm kiếm không dấu
            $('#dataTable_filter input').off().on('keyup', function () {
                table.search(removeDiacritics(this.value.toLowerCase())).draw();
            });

            // Lọc theo trạng thái
            $('#statusFilter').on('change', function () {
                var val = $(this).val();
                table.column(3).search(val).draw();
            });

            // Event delegation cho các nút
            $('#dataTable').on('click', '.disable-btn', function () {
                if (confirm("Bạn có chắc muốn vô hiệu sự kiện này?")) {
                    var id = $(this).data("id");
                    $.post("/Admin/Events/Disable", { id: id }, function (res) {
                        if (res.success) location.reload();
                        else alert("Vô hiệu thất bại!");
                    });
                }
            });

            $('#dataTable').on('click', '.approve-btn', function () {
                var id = $(this).data("id");
                $.post("/Admin/Events/Approve", { id: id }, function (res) {
                    if (res.success) location.reload();
                    else alert("Duyệt thất bại!");
                });
            });
        });
    </script>
}
