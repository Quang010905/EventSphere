@model IEnumerable<EventSphere.Models.entities.TblEvent>

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section headerContent {
    <h1 class="h3 mb-0 text-gray-800">Duyệt sự kiện</h1>
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách sự kiện chờ duyệt</h6>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead class="thead-dark">
                    <tr>
                        <th>Tiêu đề</th>
                        <th>Ngày & Giờ</th>
                        <th>Địa điểm</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr id="row-@item.Id">
                                <td>@item.Title</td>
                                <td>
                                    @if (item.Date.HasValue && item.Time.HasValue)
                                    {
                                        <div>@item.Date.Value.ToString("dd/MM/yyyy")</div>
                                        <div>@item.Time.Value.ToString(@"HH\:mm")</div>
                                    }
                                    else if (item.Date.HasValue)
                                    {
                                        <div>@item.Date.Value.ToString("dd/MM/yyyy")</div>
                                    }
                                    else
                                    {
                                        <span>Chưa có ngày</span>
                                    }
                                </td>
                                <td>@item.Venue</td>
                                <td>
                                    <button class="btn btn-sm btn-success approve-btn" data-id="@item.Id">
                                        <i class="fas fa-check"></i> Duyệt
                                    </button>

                                    <a href="@Url.Action("Details", "EventsAdmin", new { area = "Admin", id = item.Id })"
                                       class="btn btn-sm btn-info" title="Xem chi tiết">
                                        <i class="fas fa-eye"></i> Xem chi tiết
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center">Không có sự kiện chờ duyệt</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // ✅ Destroy trước khi init để tránh Cannot reinitialise DataTable
            if ($.fn.DataTable.isDataTable('#dataTable')) {
                $('#dataTable').DataTable().destroy();
            }

            // ✅ Khởi tạo DataTable
            $('#dataTable').DataTable({
                "language": {
                    "search": "🔍 Tìm kiếm:",
                    "lengthMenu": "Số sự kiện hiển thị: _MENU_",
                    "info": "Hiển thị _START_ đến _END_ của _TOTAL_ sự kiện",
                    "infoEmpty": "Không có dữ liệu",
                    "zeroRecords": "Không tìm thấy kết quả",
                    "paginate": {
                        "first": "Đầu",
                        "last": "Cuối",
                        "next": "Sau",
                        "previous": "Trước"
                    }
                },
                "pageLength": 10,
                "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "Tất cả"]],
                "ordering": true,
                "autoWidth": false
            });

            // ✅ Duyệt sự kiện
            $('#dataTable').on('click', '.approve-btn', function () {
                var id = $(this).data("id");
                $.post("/Admin/Events/Approve", { id: id }, function (res) {
                    if (res.success) {
                        // Xóa dòng khỏi bảng thay vì reload toàn trang
                        $('#row-' + id).fadeOut(500, function () { $(this).remove(); });
                    } else {
                        alert("❌ Duyệt thất bại!");
                    }
                });
            });
        });
    </script>
}
