@model EventSphere.Models.ModelViews.ScanResultViewModel
@{
    Layout = "~/Areas/Client/Views/Shared/_LayoutClient.cshtml";
    // Bạn có thể override layout tuỳ project structure nếu cần
}

<div class="container py-5" style="margin-top:100px; margin-bottom:50px;">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-body text-center p-5">
                    @if (Model?.Success == true)
                    {
                        <div class="mb-4">
                            <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
                        </div>
                        <h2 class="text-success fw-bold mb-3">Điểm danh thành công!</h2>
                    }
                    else
                    {
                        <div class="mb-4">
                            <i class="bi bi-x-circle-fill text-danger" style="font-size: 4rem;"></i>
                        </div>
                        <h2 class="text-danger fw-bold mb-3">Điểm danh thất bại</h2>
                        <p class="lead">@Html.Encode(Model?.Message ?? "Không rõ kết quả")</p>
                    }

                    <div class="mt-5">
                        <a href="~/" class="btn btn-outline-secondary">
                            <i class="bi bi-house"></i> Về trang chủ
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
