@using Microsoft.AspNetCore.Mvc.Rendering
@model IEnumerable<EventSphere.Models.entities.TblAttendance>

@{
    Layout = "~/Areas/Organizer/Views/Shared/_LayoutOrganizer.cshtml";
    ViewData["Title"] = "Attendance Management";

    var total = ViewBag.TotalCount as int? ?? 0;
    var page = ViewBag.Page as int? ?? 1;
    var pageSize = ViewBag.PageSize as int? ?? 10;
    var totalPages = (int)Math.Ceiling((double)total / pageSize);
    string currentSearch = ViewBag.Search as string ?? string.Empty;
    int? currentEventId = ViewBag.EventId as int?;
    int? currentStudentId = ViewBag.StudentId as int?;
    bool? currentAttended = ViewBag.Attended as bool?;
}

<h2 class="mb-3">Attendance Management</h2>

<form asp-action="Index" method="get" class="row g-2 align-items-end mb-3">
    <div class="col-auto">
        <label class="form-label">Attended</label>
        <select class="form-select" name="attended">
            <option value="">All</option>
            <option value="true" @(currentAttended == true ? "selected" : "")>Yes</option>
            <option value="false" @(currentAttended == false ? "selected" : "")>No</option>
        </select>
    </div>

    <div class="col-auto">
        <label class="form-label">Search</label>
        <input class="form-control" name="search" value="@currentSearch" placeholder="Event title or student name" />
    </div>

    <div class="col-auto">
        <label class="form-label">Page size</label>
        <select class="form-select" name="pageSize" onchange="this.form.submit()">
            <option value="5" @(pageSize==5? "selected":"")>5</option>
            <option value="10" @(pageSize==10? "selected":"")>10</option>
            <option value="25" @(pageSize==25? "selected":"")>25</option>
            <option value="50" @(pageSize==50? "selected":"")>50</option>
        </select>
    </div>

    <div class="col-auto">
        <button type="submit" class="btn btn-primary">Filter</button>
        <a class="btn btn-outline-secondary" href="@Url.Action("Index", "Attendance", new { area = "Organizer" })">Reset</a>
    </div>
</form>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th style="min-width:220px;">Event</th>
            <th>Student</th>
            <th>Attended</th>
            <th>Marked On</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="4" class="text-center">No records found.</td>
            </tr>
        }
        else
        {
            foreach (var a in Model)
            {
                var studentName = a.Student?.TblUserDetails?.FirstOrDefault()?.Fullname ?? ("User " + (a.Student?.Id.ToString() ?? ""));
                <tr>
                    <td>@(a.Event?.Title ?? "-")</td>
                    <td>@studentName</td>
                    <td>@(a.Attended == true ? "Yes" : "No")</td>
                    <td>@(a.MarkedOn?.ToString("dd/MM/yyyy HH:mm") ?? "-")</td>
                </tr>
            }
        }
    </tbody>
</table>

@if (totalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li class="page-item @(page == 1 ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@(page-1)" asp-route-pageSize="@pageSize"
                   asp-route-search="@currentSearch" asp-route-eventId="@(currentEventId)" asp-route-studentId="@(currentStudentId)" asp-route-attended="@(currentAttended)">
                    Previous
                </a>
            </li>

            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == page ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-pageSize="@pageSize"
                       asp-route-search="@currentSearch" asp-route-eventId="@(currentEventId)" asp-route-studentId="@(currentStudentId)" asp-route-attended="@(currentAttended)">
                        @i
                    </a>
                </li>
            }

            <li class="page-item @(page == totalPages ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@(page+1)" asp-route-pageSize="@pageSize"
                   asp-route-search="@currentSearch" asp-route-eventId="@(currentEventId)" asp-route-studentId="@(currentStudentId)" asp-route-attended="@(currentAttended)">
                    Next
                </a>
            </li>
        </ul>
    </nav>

    <div class="small text-muted mt-2">
        Showing page @@page of @totalPages — total @total items.
    </div>
}
