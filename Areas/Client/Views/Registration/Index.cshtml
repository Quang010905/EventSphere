@{
    Layout = "~/Areas/Client/Views/Shared/_LayoutClient.cshtml";
}
@if (ViewBag.itemReg != null)
{
    var reg = (EventSphere.Models.ModelViews.RegistrationView)ViewBag.itemReg;
    <div class="col-12 col-md-6 col-lg-4">
        <article class="card h-100 border-0 shadow-sm rounded-3">
            <div class="overflow-hidden rounded-top">
                <img src="@Url.Content("~/uploads/" + reg.EventImage)"
                class="w-100"
                style="height:200px; object-fit:cover;"
                alt="@reg.EventName" />
            </div>
            <div class="card-body d-flex flex-column p-3">
                <h5 class="card-title mb-1 text-truncate" title="@reg.EventName">@reg.EventName</h5>
                <p class="text-muted mb-2">
                    <i class="bi bi-calendar-event me-1"></i> @reg.EventDate
                    <span> • <i class="bi bi-clock"></i> @reg.EventTime</span>
                </p>
                <p class="text-muted mb-3"><i class="bi bi-geo-alt me-1"></i>@reg.Venue</p>
                @if (reg.Status == 0)
                {
                    <span style="color: orange;">Pending</span>
                }
                else if (reg.Status == 1)
                {
                    <span class="text-success">Accepted</span>
                }
                else
                {
                    <span class="text-danger">Denied</span>
                }
                <div class="mt-auto">
                    <a href="@Url.Action("Index", "EventDetail", new{id = reg.EventId, area = "Client"})"
                       class="btn btn-sm btn-primary mt-3">
                        Chi tiết
                    </a>
                </div>
            </div>
        </article>
    </div>
}

