@{
    Layout = "/Areas/Client/Views/Shared/_LayoutClient.cshtml";
    var stuId = Context.Session.GetInt32("UId");
}

<h5 style="visibility: hidden;">Event Detail</h5>

<div class="container py-5" style="margin-top:100px; margin-bottom:50px; position: relative; z-index: 1000;">
    <h3 class="mb-4 text-center">Event Detail</h3>

    @if (ViewBag.itemEvent != null)
    {
        var eve = (EventSphere.Models.ModelViews.EventView)ViewBag.itemEvent;
        <div class="row">
            <!-- Hình ảnh sự kiện -->
            <div class="col-lg-5 mb-4">
                <div class="event-image-wrapper border rounded shadow-sm d-flex align-items-center justify-content-center">
                    <img src="@Url.Content("~/uploads/" + eve.Image)"
                         alt="@eve.Title"
                         class="img-fluid event-image">
                </div>
            </div>
            <form action="@Url.Action("RegisterEvent", "EventDetail", new { area = "Client" })" method="post">
                <div class="col-lg-7">
                    <h3 class="font-weight-semi-bold">@eve.Title</h3>
                    <div class="d-flex mb-3">
                        <small class="text-muted mr-3"><i class="fa fa-calendar-alt"></i>@eve.Date</small>
                        <small class="text-muted"><i class="fa fa-map-marker-alt"></i>@eve.Time</small>
                    </div>
                    <h4 class="text-primary mb-4">@eve.Venue</h4>
                    <h3>@eve.Title</h3>
                    <p class="mb-4">@eve.Description</p>

                    <input type="hidden" name="EventId" value="@eve.Id"/>
                    <input type="hidden" name="StuId" value="@stuId"/>

                    <div class="d-flex align-items-center mb-4 pt-2">
                        @if (ViewBag.AlreadyRegistered != null && (bool)ViewBag.AlreadyRegistered)
                        {
                            <button class="btn btn-secondary px-4" type="button" disabled>
                                <i class="fa fa-ticket-alt mr-1"></i> Already Registered
                            </button>
                        }
                        else
                        {
                            <button class="btn btn-primary px-4" type="submit">
                                <i class="fa fa-ticket-alt mr-1"></i> Register
                            </button>
                        }
                    </div>

                    <div class="d-flex pt-2">
                        <p class="text-dark font-weight-medium mb-0 mr-2">Chia sẻ:</p>
                        <div class="d-inline-flex">
                            <a class="text-dark px-2" href="#"><i class="fab fa-facebook-f"></i></a>
                            <a class="text-dark px-2" href="#"><i class="fab fa-twitter"></i></a>
                            <a class="text-dark px-2" href="#"><i class="fab fa-linkedin-in"></i></a>
                            <a class="text-dark px-2" href="#"><i class="fab fa-pinterest"></i></a>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <!-- Tabs: Mô tả / Thông tin / Đánh giá -->
        <div class="row mt-5">
            <div class="col">
                <ul class="nav nav-tabs justify-content-center border-secondary mb-4">
                    <li class="nav-item">
                        <a class="nav-link active font-weight-bold" data-toggle="tab" href="#tab-desc">Mô tả</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link font-weight-bold" data-toggle="tab" href="#tab-info">Thông tin thêm</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link font-weight-bold" data-toggle="tab" href="#tab-review">Đánh giá</a>
                    </li>
                </ul>

                <div class="tab-content p-4 border rounded bg-white shadow-sm">
                    <!-- Mô tả -->
                    <div class="tab-pane fade show active" id="tab-desc">
                        <h4 class="mb-3">Giới thiệu sự kiện</h4>
                        <p style="line-height:1.6;">@eve.Description</p>
                    </div>

                    <!-- Thông tin thêm -->
                    <div class="tab-pane fade" id="tab-info">
                        <h4 class="mb-3">Thông tin chi tiết</h4>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item px-0"><strong>Ngày bắt đầu:</strong> 12</li>
                            <li class="list-group-item px-0"><strong>Ngày kết thúc:</strong> 12</li>
                            <li class="list-group-item px-0"><strong>Địa điểm:</strong> @eve.Venue</li>
                            <li class="list-group-item px-0"><strong>Giá vé:</strong> 12000</li>
                        </ul>
                    </div>

                    <!-- Đánh giá -->
                    <div class="tab-pane fade" id="tab-review">
                        <h4 class="mb-3">Đánh giá sự kiện</h4>
                        <p>Chưa có đánh giá nào.</p>
                        <!-- form đánh giá giữ nguyên -->
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center">Không tìm thấy sự kiện.</div>
    }
</div>
