@{
    Layout = "/Areas/Client/Views/Shared/_LayoutClient.cshtml";
}
<h5 style="visibility: hidden;">Event Detail</h5>

<div class="container py-5" style="margin-top:100px; margin-bottom:50px; position: relative; z-index: 1000;">
    <h3 class="mb-4 text-center">Event Detail</h3>
    @if (ViewBag.itemEvent != null)
    {
        var eve = (EventSphere.Models.ModelViews.EventView)ViewBag.itemEvent;
        <div class="row">
            <!-- Ảnh sự kiện -->
            <div class="col-lg-5 mb-4">
                <div class="border text-center">
                    <img src="@Url.Content("~/uploads/" + eve.Image)"
                         alt="Event Image"
                         class="img-fluid"
                         style="max-height: 350px; object-fit: contain;">
                </div>
            </div>


            <!-- Thông tin sự kiện -->
            <div class="col-lg-7">
                <h3 class="font-weight-semi-bold">adf</h3>
                <div class="d-flex mb-3">
                    <small class="text-muted mr-3"><i class="fa fa-calendar-alt"></i>@eve.Date</small>
                    <small class="text-muted"><i class="fa fa-map-marker-alt"></i>@eve.Time</small>
                </div>
                <h4 class="text-primary mb-4">@eve.Venue</h4>
                <h3>@eve.Title</h3>
                <p class="mb-4">@eve.Description</p>
                <div class="d-flex align-items-center mb-4 pt-2">
                    <button class="btn btn-primary px-4">
                        <i class="fa fa-ticket-alt mr-1"></i> Register
                    </button>
                </div>

                <div class="d-flex pt-2">
                    <p class="text-dark font-weight-medium mb-0 mr-2">Chia sẻ:</p>
                    <div class="d-inline-flex">
                        <a class="text-dark px-2" href="#"><i class="fab fa-facebook-f"></i></a>
                        <a class="text-dark px-2" href="#"><i class="fab fa-twitter"></i></a>
                        <a class="text-dark px-2" href="#"><i class="fab fa-linkedin-in"></i></a>
                        <a class="text-dark px-2" href="#"><i class="fab fa-pinterest"></i></a>
                    </div>
                </div>
            </div>
        </div>

    }
  
    <!-- Tab mô tả, thông tin, đánh giá -->
    <div class="row mt-5">
        <div class="col">
            <div class="nav nav-tabs justify-content-center border-secondary mb-4">
                <a class="nav-item nav-link active" data-toggle="tab" href="#tab-desc">Mô tả</a>
                <a class="nav-item nav-link" data-toggle="tab" href="#tab-info">Thông tin thêm</a>
                <a class="nav-item nav-link" data-toggle="tab" href="#tab-review">Đánh giá</a>
            </div>
            <div class="tab-content">
                <!-- Mô tả -->
                <div class="tab-pane fade show active" id="tab-desc">
                    <h4 class="mb-3">Giới thiệu sự kiện</h4>
                    <p>sdfsdaf</p>
                </div>

                <!-- Thông tin thêm -->
                <div class="tab-pane fade" id="tab-info">
                    <h4 class="mb-3">Thông tin chi tiết</h4>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item px-0">Ngày bắt đầu: 12</li>
                        <li class="list-group-item px-0">Ngày kết thúc: 12</li>
                        <li class="list-group-item px-0">Địa điểm: adf</li>
                        <li class="list-group-item px-0">Giá vé: 12000</li>
                    </ul>
                </div>

                <!-- Đánh giá -->
                <div class="tab-pane fade" id="tab-review">
                    <h4 class="mb-3">Đánh giá sự kiện</h4>
                    <p>Chưa có đánh giá nào.</p>

                    <h5 class="mt-4">Viết đánh giá</h5>
                    <form>
                        <div class="form-group">
                            <label for="review">Nội dung *</label>
                            <textarea id="review" cols="30" rows="5" class="form-control"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="name">Tên của bạn *</label>
                            <input type="text" class="form-control" id="name">
                        </div>
                        <div class="form-group">
                            <label for="email">Email *</label>
                            <input type="email" class="form-control" id="email">
                        </div>
                        <button type="submit" class="btn btn-primary px-4">Gửi đánh giá</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
