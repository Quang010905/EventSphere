@{
    Layout = "/Areas/Client/Views/Shared/_LayoutClient.cshtml";
}

<h5 style="visibility: hidden;">Event Detail</h5>

<div class="container py-5" style="margin-top:100px; margin-bottom:50px;">
    <h2 class="mb-5 text-center font-weight-bold">Chi tiết sự kiện</h2>

    @if (ViewBag.itemEvent != null)
    {
        var eve = (EventSphere.Models.ModelViews.EventView)ViewBag.itemEvent;
        <div class="row">
            <!-- Hình ảnh sự kiện -->
            <div class="col-lg-5 mb-4">
                <div class="event-image-wrapper border rounded shadow-sm d-flex align-items-center justify-content-center">
                    <img src="@Url.Content("~/uploads/" + eve.Image)"
                         alt="@eve.Title"
                         class="img-fluid event-image">
                </div>
            </div>

            <!-- Thông tin sự kiện -->
            <div class="col-lg-7">
                <h2 class="font-weight-bold mb-3">@eve.Title</h2>

                <div class="d-flex mb-3 text-muted small">
                    <span class="mr-4"><i class="fa fa-calendar-alt mr-1"></i> @eve.Date</span>
                    <span><i class="fa fa-clock mr-1"></i> @eve.Time</span>
                </div>

                <h5 class="text-primary mb-3">
                    <i class="fa fa-map-marker-alt mr-2"></i>@eve.Venue
                </h5>

                <p class="mb-4" style="line-height:1.6;">@eve.Description</p>

                <button class="btn btn-primary px-4 py-2 mb-4">
                    <i class="fa fa-ticket-alt mr-2"></i> Đăng ký tham gia
                </button>

                <div class="d-flex align-items-center">
                    <p class="text-dark font-weight-medium mb-0 mr-2">Chia sẻ:</p>
                    <div class="d-inline-flex">
                        <a class="text-dark px-2" href="#"><i class="fab fa-facebook-f"></i></a>
                        <a class="text-dark px-2" href="#"><i class="fab fa-twitter"></i></a>
                        <a class="text-dark px-2" href="#"><i class="fab fa-linkedin-in"></i></a>
                        <a class="text-dark px-2" href="#"><i class="fab fa-pinterest"></i></a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tabs: Mô tả / Thông tin / Đánh giá -->
        <div class="row mt-5">
            <div class="col">
                <ul class="nav nav-tabs justify-content-center border-secondary mb-4">
                    <li class="nav-item">
                        <a class="nav-link active font-weight-bold" data-toggle="tab" href="#tab-desc">Mô tả</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link font-weight-bold" data-toggle="tab" href="#tab-info">Thông tin thêm</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link font-weight-bold" data-toggle="tab" href="#tab-review">Đánh giá</a>
                    </li>
                </ul>

                <div class="tab-content p-4 border rounded bg-white shadow-sm">
                    <!-- Mô tả -->
                    <div class="tab-pane fade show active" id="tab-desc">
                        <h4 class="mb-3">Giới thiệu sự kiện</h4>
                        <p style="line-height:1.6;">@eve.Description</p>
                    </div>

                    <!-- Thông tin thêm -->
                    <div class="tab-pane fade" id="tab-info">
                        <h4 class="mb-3">Thông tin chi tiết</h4>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item px-0"><strong>Ngày bắt đầu:</strong> 12</li>
                            <li class="list-group-item px-0"><strong>Ngày kết thúc:</strong> 12</li>
                            <li class="list-group-item px-0"><strong>Địa điểm:</strong> @eve.Venue</li>
                            <li class="list-group-item px-0"><strong>Giá vé:</strong> 12000</li>
                        </ul>
                    </div>

                    <!-- Đánh giá -->
                    <div class="tab-pane fade" id="tab-review">
                        <h4 class="mb-3">Đánh giá sự kiện</h4>
                        <p>Chưa có đánh giá nào.</p>

                        <h5 class="mt-4">Viết đánh giá</h5>
                        <form method="post" action="/Feedback/Create">
                            <!-- Hidden: event id -->
                            <input type="hidden" name="EventId" value="@eve.Id" />

                            <!-- Rating stars -->
                            <div class="form-group">
                                <label>Đánh giá *</label>
                                <div class="star-rating">
                                    <input type="radio" id="star5" name="Rating" value="5"><label for="star5" title="5 sao"><i class="fa fa-star"></i></label>
                                    <input type="radio" id="star4" name="Rating" value="4"><label for="star4" title="4 sao"><i class="fa fa-star"></i></label>
                                    <input type="radio" id="star3" name="Rating" value="3"><label for="star3" title="3 sao"><i class="fa fa-star"></i></label>
                                    <input type="radio" id="star2" name="Rating" value="2"><label for="star2" title="2 sao"><i class="fa fa-star"></i></label>
                                    <input type="radio" id="star1" name="Rating" value="1"><label for="star1" title="1 sao"><i class="fa fa-star"></i></label>
                                </div>
                            </div>

                            <!-- Comment -->
                            <div class="form-group">
                                <label for="review">Nội dung *</label>
                                <textarea id="review" name="Comments" rows="5" class="form-control"></textarea>
                            </div>

                            <!-- Name -->
                            <div class="form-group">
                                <label for="name">Tên của bạn *</label>
                                <input type="text" class="form-control" id="name" name="Name">
                            </div>

                            <!-- Email -->
                            <div class="form-group">
                                <label for="email">Email *</label>
                                <input type="email" class="form-control" id="email" name="Email">
                            </div>

                            <button type="submit" class="btn btn-primary px-4">Gửi đánh giá</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center">Không tìm thấy sự kiện.</div>
    }
</div>

<style>
    .event-image-wrapper {
        height: 350px;
        background-color: #f9f9f9;
    }

    .event-image {
        max-height: 100%;
        max-width: 100%;
        object-fit: contain;
        transition: transform 0.3s ease;
    }

        .event-image:hover {
            transform: scale(1.05);
        }

    .nav-tabs .nav-link {
        color: #555;
    }

        .nav-tabs .nav-link.active {
            color: #007bff;
            border-color: #007bff #007bff #fff;
        }

    /* Star rating */
    .star-rating {
        direction: rtl;
        display: inline-flex;
        font-size: 1.5rem;
    }

        .star-rating input {
            display: none;
        }

        .star-rating label {
            color: #ccc;
            cursor: pointer;
            padding: 0 5px;
        }

            .star-rating input:checked ~ label,
            .star-rating label:hover,
            .star-rating label:hover ~ label {
                color: #ffc107;
            }
</style>
